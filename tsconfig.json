{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": ".tmp",
    "pretty": true,
    "moduleResolution": "node",
    "lib": ["es2017"]
  },
  "compileOnSave": false,
  "exclude": [
    "node_modules",
    ".tmp",
    "dist"
  ]
}
